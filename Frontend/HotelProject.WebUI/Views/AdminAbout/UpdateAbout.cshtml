@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Bilgileri Güncelleme</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    <input type="hidden" asp-for="AboutID" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Başlık 1</label>
                            <input type="text" asp-for="Title1" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Başlık 2</label>
                            <input type="text" asp-for="Title2" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Açıklama</label>
                            <input type="text" asp-for="Content" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Personel Sayısı</label>
                            <input type="text" asp-for="StaffCount" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Oda Sayısı</label>
                            <input type="text" asp-for="RoomCount" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Misafir Sayısı</label>
                            <input type="text" asp-for="CustomerCount" class="form-control">
                        </div>
                    </div>
                    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

