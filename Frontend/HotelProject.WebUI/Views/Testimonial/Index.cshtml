@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
	<h4 class="card-title">Referanslar</h4>
	<div class="table-responsive">
		<table class="table table-bordered verticle-middle">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Referans Görseli</th>
					<th scope="col">Referans Adı</th>
					<th scope="col">Referans Ünvan</th>
					<th scope="col">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.TestimonialID</td>
						<td>@item.Image</td>
						<td>
							@item.Name
						</td>
						<td>@item.Title</td>
						<td>
							<span>
								<a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
								<a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
							</span>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<a href="/Testimonial/AddTestimonial/" class="label gradient-2 btn-rounded"> Yeni Referans Ekle</a>
	</div>
</div>

