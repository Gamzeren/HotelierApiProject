@model ResultGuestDto

@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Misafir Kayıt</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Misafir Adı</label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label> Misafir Soyadı</label>
                            <input type="text" asp-for="Surname" class="form-control">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Misafir Şehir</label>
                            <input type="text" asp-for="City" class="form-control">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>