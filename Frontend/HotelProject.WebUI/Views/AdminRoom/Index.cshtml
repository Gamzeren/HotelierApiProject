@model List<ResultRoomDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card-body">
	<h4 class="card-title">Odalar Tablosu</h4>
	<div class="table-responsive">
		<table class="table table-bordered verticle-middle">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Oda Numarası</th>
					<th scope="col">Başlık</th>
						<th scope="col">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@item.RoomID</td>
						<td>
							@item.RoomNumber
						</td>
						<td>@item.Title</td>
						<td>
							<span>
								<a href="/AdminRoom/UpdateRoom/@item.RoomID" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
								<a href="/AdminRoom/DeleteRoom/@item.RoomID" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
							</span>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<a href="/AdminRoom/AddRoom/" class="label gradient-2 btn-rounded"> Yeni Oda Ekle</a>
	</div>
</div>

