@model HotelProject.WebUI.Models.Setting.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Ayarları</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Soyadınız</label>
                            <input type="text" asp-for="Surname" readonly class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" asp-for="Username" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Email Adresiniz</label>
                            <input type="text" asp-for="Email" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Şifreniz</label>
                            <input type="password" asp-for="Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Şifreniz Tekrarı</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control">
                        </div>
                    </div>
                    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

