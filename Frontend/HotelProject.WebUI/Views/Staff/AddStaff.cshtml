@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Personel Kayıt</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Personel Adı Soyadı</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Personel Ünvanı</label>
                            <input type="text" asp-for="Title" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Sosyal Medya Link</label>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Linkedin</label>
                                <input type="text" asp-for="SocialMedia1" class="form-control" placeholder="Linkedin URL">
                            </div>
                            <div class="form-group col-md-4">
                                <label>GitHub</label>
                                <input type="text" asp-for="SocialMedia2" class="form-control" placeholder="GitHub URL">
                            </div>
                            <div class="form-group col-md-4">
                                <label>X</label>
                                <input type="text" asp-for="SocialMedia3" class="form-control" placeholder="X URL">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

