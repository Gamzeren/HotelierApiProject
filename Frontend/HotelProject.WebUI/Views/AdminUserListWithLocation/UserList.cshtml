@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserWithWorkLocationDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="card-body">
	<h4 class="card-title">Kullanıcı Tablosu</h4>
	<div class="table-responsive">
		<table class="table table-bordered verticle-middle">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Kullanıcı</th>
					<th scope="col">Çalıştığı Şube</th>
					<th scope="col">Şehir</th>
					<th scope="col">Durum</th>
					<th scope="col">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.WorkLocationID</td>
						<td>
							<img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
							@item.Name @item.Surname
						</td>
						<td>@item.WorkLocationName</td>
						<td>@item.City</td>
						<td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
						<td>
							<span>
								<a href="/AdminUserListWithLocation/UpdateAdminUserListWithLocation/@item.WorkLocationID" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
								<a href="/AdminUserListWithLocation/DeleteAdminUserListWithLocation/@item.WorkLocationID" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
							</span>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<a href="/AdminUserListWithLocation/AddAdminUserListWithLocation/" class="label gradient-2 btn-rounded"> Yeni Kullanıcı Ekle</a>
	</div>
</div>

