@model List<HotelProject.EntityLayer.Concrete.AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
	<h4 class="card-title">Roller Tablosu</h4>
	<div class="table-responsive">
		<table class="table table-bordered verticle-middle">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Rol Adı</th>
					<th scope="col">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>
							@item.Name
						</td>
						<td>
							<span>
								<a href="/Role/UpdateRole/@item.Id" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
								<a href="/Role/DeleteRole/@item.Id" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
							</span>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<a href="/Role/AddRole/" class="label gradient-2 btn-rounded"> Yeni Rol Ekle</a>
	</div>
</div>

