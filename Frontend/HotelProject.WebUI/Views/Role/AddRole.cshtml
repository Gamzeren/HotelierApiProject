@model HotelProject.WebUI.Models.Role.AddRoleViewModel

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Rol Kayıt</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Rol Adı</label>
                            <input type="text" asp-for="RoleName" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

