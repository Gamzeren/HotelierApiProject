@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Bilgileri Güncelleme</h4>
            <br />
            <div class="basic-form">
                <form method="post">
                    <input type="hidden" asp-for="ServiceID" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Hizmet İkonu</label>
                            <input type="text" asp-for="ServiceIcon" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Hizmet Başlığı</label>
                            <input type="text" asp-for="Title" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Hizmet Açıklaması</label>
                            <input type="text" asp-for="Description" class="form-control">
                        </div>
                    </div>
                    <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

