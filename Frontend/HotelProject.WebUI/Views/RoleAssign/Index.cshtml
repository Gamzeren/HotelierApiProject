@model List<HotelProject.EntityLayer.Concrete.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
	<h4 class="card-title">Kullanıcı Rol Tablosu</h4>
	<div class="table-responsive">
		<table class="table table-bordered verticle-middle">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Kullanıcı</th>
					<th scope="col">Rol Ata</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>
							<img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
							 @item.Name @item.Surname
						</td>
						<td> <a href="/RoleAssign/AssignRole/@item.Id" class="label gradient-2 btn-rounded">Rol Ata</a> </td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

